<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto text-center">
			<h1>Edit link</h1>
			<div class="card">
				<div class="card-body">
					<form method="post">
						<div class="form-group mb-3">
							<input type="text" value="{{link.title}}" class="form-control" ,
								name="title" ,
								placeholder="title" autofocus required>
						</div>
						<div class="form-group mb-3">
							<input type="url" value="{{link.lurl}}" class="form-control" ,
								name="lurl" ,
								placeholder="url" required>
						</div>
						<div class="form-group mb-3">
							<textarea name="descrip" rows="2" class="form-control"
								placeholder="Description">{{link.descrip}}</textarea>
						</div>
						<div class="form-group d-grid gap-2">
							<button class="btn btn-primary" type="submit">Save </button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>