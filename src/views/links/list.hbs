<div class="container p-4">
	<div class="row">
		<div class="m-4 text-center">
			<div class="col-md-4 mx-auto">
				<a href="/links/add" class="btn btn-primary">Creat a new link</a>
			</div>
		</div>
		{{#each links }}
		<div class="col-md-3">
			<div class="card text-center">
				<div class="card-body">
					<h3 class="card-title text-uppercase">
						<img src="{{lurl}}/favicon.ico" width="35px"> <a href="{{lurl}}"
							target="_blank">{{title}}</a>
					</h3>
					<p class="m-2">
						{{descrip}}
					</p>
					<p>{{timeago create_at}}</p>
					<a href="/links/delete/{{id}}" class="btn btn-danger">Delete</a>
					<a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
				</div>
			</div>
		</div>
		{{else}}
		<div class="col-md-4 mx-auto">
			<div class="card card-body text-center">
				<p>There are not links saved yet.</p>
			</div>
		</div>
		{{/each}}

	</div>
</div>